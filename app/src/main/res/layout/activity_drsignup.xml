<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".drsignup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="80dp"
        android:text="Doctorhub"
        android:textColor="@color/splashscreenbackground"
        android:textSize="55dp"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="First Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".7"
            android:background="@drawable/edittext"
            android:fontFamily="@font/poppinsmedium"
            android:hint="First Name"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="#000000"
            android:textColorHint="#3f3f3f" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Last Name"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha=".7"
            android:background="@drawable/edittext"
            android:fontFamily="@font/poppinsmedium"
            android:hint="Last Name"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="#000000"
            android:textColorHint="#3f3f3f" />

        <TextView
            android:id="@+id/txtmobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Email"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mobileno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:alpha=".7"
            android:background="@drawable/edittext"
            android:fontFamily="@font/poppinsmedium"
            android:hint="email"
            android:paddingHorizontal="10dp"
            android:paddingVertical="10dp"
            android:textColor="#000000"
            android:textColorHint="#3f3f3f" />

        <Button
            android:id="@+id/login"
            style="@style/ShapeAppearanceOverlay.MaterialComponents.TextInputLayout.FilledBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/poppinsmedium"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>