<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".doctorprofile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/lin4">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/splashscreenbackground"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/otp_back_button"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:paddingRight="5dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor Profile"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/poppins"
                android:textSize="20sp"
                android:layout_weight="7"/>


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>







    </LinearLayout>

    <ImageView
        android:id="@+id/docprofile"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lin4"
        android:src="@mipmap/docprofile"
        android:paddingTop="40dp"
        />
    <TextView
        android:id="@+id/docname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajay umat"
        android:layout_below="@+id/docprofile"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="10dp"/>
    <TextView
        android:id="@+id/docprofession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Psychiatrist"
        android:layout_below="@+id/docname"
        android:layout_centerInParent="true"
        android:fontFamily="@font/poppins"
        android:textSize="20sp"
        android:paddingTop="10dp"/>
    <ImageView
        android:id="@+id/ratingbar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/docprofession"
        android:src="@mipmap/ratingbar1"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>

    <ImageButton
        android:id="@+id/docpersonalinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ratingbar1"
        android:src="@mipmap/docpersonalinfo"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:paddingTop="60dp"/>
    <ImageButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/docpersonalinfo"
        android:src="@mipmap/docworkingaddress"
        android:background="@color/transparent"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>
    <ImageButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:src="@mipmap/bookappointment"
    android:background="@color/transparent"
    android:layout_centerHorizontal="true"
    android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"/>






</RelativeLayout>